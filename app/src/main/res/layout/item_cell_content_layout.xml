<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:visibility="gone"
    android:id="@+id/fl_test">

        <android.support.v7.widget.CardView
            card_view:cardBackgroundColor="#982FCBE5"
            app:cardBackgroundColor="#982FCBE5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                >
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:id="@+id/iv_rider_pic2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:paddingLeft="8dp"
                    android:src="@drawable/user_placeholder"
                    />

                <TextView
                    android:id="@+id/tv_rider_name2"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Ahmad Irfan"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    />

                    <LinearLayout
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:orientation="vertical"
                        android:weightSum="6"
                        >
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_phone"
                                />
                            <TextView
                                android:id="@+id/tv_rider_phone"
                                android:layout_weight="3.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="03124002951"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:weightSum="5"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_car_black"
                                />
                            <TextView
                                android:id="@+id/tv_car_info"
                                android:layout_width="0dp"
                                android:layout_weight="3.5"
                                android:layout_height="match_parent"
                                android:text="Corolla 2242"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="22sp"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_attach_money_black"
                                />
                            <TextView
                                android:id="@+id/tv_cost2"
                                android:layout_weight="3.5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="$240"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:weightSum="5"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_home_black"
                                />
                            <TextView
                                android:id="@+id/tv_destination2"
                                android:layout_width="0dp"
                                android:layout_weight="3.5"
                                android:layout_height="match_parent"
                                android:text="4A Rehmanpura Lahore "
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>