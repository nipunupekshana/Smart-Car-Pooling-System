<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_marginTop="30dp"
    android:layout_height="match_parent"
    android:id="@+id/rating_linear_layout"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:id="@+id/cardView">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_label_selection"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/leku_strong_grey"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:text="Please Choose :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:id="@+id/edt_user_numbers"
                            android:visibility="visible"
                            android:inputType="numberSigned"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:hint="@string/tv_label_user_numbers"
                            android:layout_height="wrap_content" />
                        <!--<Button-->
                            <!--android:theme="@style/Widget.AppCompat.Button.Colored"-->
                            <!--android:id="@+id/btn_done"-->
                            <!--android:visibility="gone"-->
                            <!--android:layout_gravity="center_horizontal"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="@string/btn_done"-->
                            <!--/>-->
                        <Button
                            android:background="@color/colorPrimary"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/btn_done"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="DONE"
                            android:textColor="@color/leku_white"
                            />

                </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>