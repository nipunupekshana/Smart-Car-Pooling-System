<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        >
        <TextView
            android:id="@+id/tv_driver_name"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/tv_Pickup_label"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pickup:"
                android:textColor="@color/leku_strong_grey"
                android:textSize="13sp"

                />
            <TextView
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:id="@+id/tv_Pickup"
                android:layout_gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EMPTY"
                android:textColor="@color/leku_strong_grey"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="5dp"
            >
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/tv_Destination_label"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Destination:"
                android:textColor="@color/leku_strong_grey"
                android:textSize="13sp"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:id="@+id/tv_Destination"
                android:layout_gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EMPTY"
                android:textColor="@color/leku_strong_grey"
                android:textSize="13sp"
                />
        </LinearLayout>
        <TextView
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review1"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rb_review1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review2"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rb_review2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review3"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <RatingBar
            android:id="@+id/rb_review3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            />
        <android.support.design.widget.TextInputLayout
            android:visibility="visible"
            android:id="@+id/layout_complaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/cardview_dark_background"
            tools:ignore="RtlHardcoded">

            <EditText
                android:id="@+id/et_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_complaint"
                android:textColor="@color/cardview_dark_background"
                android:maxLength="100"
                android:textColorHint="@color/cardview_dark_background"
                android:imeOptions="actionNext"
                android:singleLine="true" />


        </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        >
        <Button
            android:background="@color/colorPrimary"
            android:id="@+id/btn_feedback"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/btn_publish"
            />
    <Button
            android:background="@color/red"
            android:id="@+id/btn_close"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Close"
            />
    </LinearLayout>
    </LinearLayout>